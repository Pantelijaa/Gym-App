<BorderPane fx:id="scan" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymapp.controllers.ScanController">
   <left>
      <SidePanel fx:id="sidePanel" BorderPane.alignment="CENTER" />
   </left>
   <bottom>
      <BottomBar fx:id="bottomBar" BorderPane.alignment="CENTER" />
   </bottom>
   <stylesheets>
      <URL value="@../css/main.css" />
      <URL value="@../css/scan.css" />
   </stylesheets>
   <center>
      <HBox id="scan-container" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="ivCameraOutput" fitHeight="400.0" fitWidth="500.0" pickOnBounds="true">
               <cursor>
                  <Cursor fx:constant="NONE" />
               </cursor>
               <image>
                  <Image url="@../images/camera-not-allowed-no-photography-image-not-available-concept-icon-in-line-style-design-isolated-on-white-background-editable-stroke-vector.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
   </center>
